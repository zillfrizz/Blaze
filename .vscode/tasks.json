{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Vulkan Release",
      "type": "shell",
      "command": "g++.exe",
      "args": [
        "-DNDEBUG",
        "-DGRAPHIC_LIB_VULKAN",
        "-std=c++17",
        "-I",
        "src/",
        "-I",
        "C:/VulkanSDK/1.3.283.0/Include",
        "-I",
        "${workspaceFolder}/lib/GLFW/include",
        "-I",
        "${workspaceFolder}/lib/GLM",
        "-L",
        "${workspaceFolder}/lib/GLFW/lib-mingw-w64",
        "-L",
        "C:/VulkanSDK/1.3.283.0/lib",
        "${workspaceFolder}/src/vulkan/*.cpp",
        "${workspaceFolder}/src/main.cpp",
        "${workspaceFolder}/src/utils/*.cpp",
        "-o",
        "${workspaceFolder}/bin/x64/release/vulkan_app.exe",
        "-lglfw3",
        "-lvulkan-1",
        "-lgdi32",
        "-luser32",
        "-lkernel32"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Build Vulkan Debug",
      "type": "shell",
      "command": "g++.exe",
      "args": [
        "-g",     
        "-I",
        "src/",
        "-DGRAPHIC_LIB_VULKAN",
        "-std=c++17",
        "-I",
        "C:/VulkanSDK/1.3.283.0/Include",
        "-I",
        "${workspaceFolder}/lib/GLFW/include",
        "-I",
        "${workspaceFolder}/lib/GLM",
        "-L",
        "${workspaceFolder}/lib/GLFW/lib-mingw-w64",
        "-L",
        "C:/VulkanSDK/1.3.283.0/lib",
        "${workspaceFolder}/src/vulkan/*.cpp",
        "${workspaceFolder}/src/main.cpp",
        "${workspaceFolder}/src/utils/*.cpp",
        "-o",
        "${workspaceFolder}/bin/x64/debug/vulkan_app.exe",
        "-lglfw3",
        "-lvulkan-1",
        "-lgdi32",
        "-luser32",
        "-lkernel32"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Run Vulkan Release",
      "type": "shell",
      "command": "${workspaceFolder}/bin/x64/release/vulkan_app.exe",
      "problemMatcher": []
    },
    {
      "label": "Run Vulkan Debug",
      "type": "shell",
      "command": "${workspaceFolder}/bin/x64/debug/vulkan_app.exe",
      "problemMatcher": []
    }
  ]
}